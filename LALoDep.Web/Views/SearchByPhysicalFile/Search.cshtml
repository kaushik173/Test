@model LALoDep.Models.Inquiry.SearchByPhysicalFileViewModel
@{
    ViewBag.Title = "Search";
}

<div class="row">
    <div class="col-md-12 col-sm-12 center-block" style="padding: 0 20px 0 20px">
        <div class="widget row">
            <div class="widget-header bordered-bottom bordered-themeprimary col-xs-12">
                <span class="widget-caption">Search Criteria</span>
                <div class="widget-buttons">
                    &nbsp;
                </div>
            </div>
            <div class="widget-body col-xs-12">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "SearchByPhysicalFile-search-form", @class = "form-inline  center-block" }))
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.FileName1, "File Name-1", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.FileName1, new { @class = "form-control input-sm", tabindex = 1, style = "width:98%" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.FileName2, "AND File Name-2", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.FileName2, new { @class = "form-control input-sm", tabindex = 1, style = "width:98%" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.FileName3, "AND File Name-3", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.FileName3, new { @class = "form-control input-sm", tabindex = 1, style = "width:98%" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ClientLastName, "Client Last Name", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.ClientLastName, new { @class = "form-control input-sm", tabindex = 1, style = "width:98%" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ClientFirstName, "Client First Name", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.ClientFirstName, new { @class = "form-control input-sm", tabindex = 1, style = "width:98%" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.CaseNumber, "Case #", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.CaseNumber, new { @class = "form-control input-sm", tabindex = 1, style = "width:98%" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.AgencyID, "Agency", new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.AgencyID, Model.AgencyList, "", new { @class = "form-control input-sm", tabindex = 2, style = "width:98%" })
                    </div>
                }
                <p></p>
                <div id="search-validation-error" class="alert alert-danger hidden">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    At least one search parameter is required.
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row" id="divSearchResult">
    <div class="col-md-12 col-sm-12 center-block" style="padding: 0 20px 0 20px">
        <div class="widget row">
            <div class="widget-header bordered-bottom bordered-themeprimary col-xs-12">
                <span class="widget-caption">Search Results</span>
                <div class="widget-buttons">
                    &nbsp;
                </div>
            </div>
            <div class="widget-body col-xs-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-condensed table-hover table-padding table-striped" id="SearchByPhysicalFile">
                        <thead>
                            <tr>
                                <th class="">Physical File Name</th>
                                <th class="">Client</th>
                                <th class="">DOB</th>
                                <th class="">Role</th>
                                <th class="">JCATS #</th>
                                <th class="">Close Date</th>
                                <th class="">Case #</th>
                                <th class="">Attorney</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section fixedfooter{
    <div class="boxfloat text-center">
        <button id="search" type="submit" class="btn btn-primary v-bottom default" tabindex="11">Search</button>
    </div>
}

@section scripts
{
    <script type="text/javascript">
        var $onViewLoad = '@Model.OnViewLoad';
    </script>
    <script src="@Url.Content("~/Scripts/Application-Script/Inquiry/SearchByPhysicalFile.js?v=" + Guid.NewGuid())"></script>
}

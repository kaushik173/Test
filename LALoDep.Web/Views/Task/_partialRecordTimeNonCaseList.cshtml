@using LALoDep.Core.Custom.Extensions
@using LALoDep.Custom.Security
@model List<LALoDep.Domain.RTNC.RTNC_Search_spResult>

<style type="text/css">
    .grand-total {
        font-weight: bold;
        text-shadow: 1px 1px 1px #ccc;
    }
</style>

<div class="table-responsive">
    <table class="table table-bordered table-condensed table-hover table-padding table-striped" id="recordTimeList">
        <thead>
            <tr>


                <th>Date</th>
                <th>Staff Member	</th>
                <th>Work Description</th>
                <th class="text-right">Hours</th>
                <th>Note</th>

            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a  href="/Task/RecordTimeNonCaseEdit/@item.WorkID.ToEncrypt()">@item.WorkDate</a>

                        </td>
                        <td>@item.StaffMember</td>
                        <td>@item.WorkDescription</td>
                        <td class="text-right">@item.WorkHours</td>
                        <td>

                          @item.WorkNote



                        </td>
                    </tr>
                }
                <tr>
                    <td style="text-align:right" colspan="3" class="grand-total">Grand Total</td>
                    <td style="text-align:right" class="grand-total">@Model.Sum(x => x.WorkHours)</td>
                    
                    <td ></td>
                </tr>

            }
            else
            {
                <tr><td align="center" colspan="9">No data available in table</td></tr>
            }

        </tbody>
    </table>
</div>


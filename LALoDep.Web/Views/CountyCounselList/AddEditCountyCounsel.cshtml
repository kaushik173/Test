@model LALoDep.Models.Administration.CountyCounselPerson
@{
    ViewBag.Title = "County Counsel<br/> Add/Edit";
}

<div class="row">
    <div class="col-md-12 col-sm-12 center-block" style="padding: 0 20px 0 20px">
        <div class="widget row">
            <div class="widget-body col-xs-12">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "CountyCounselAddEdit-search-form", @class = "form-inline  center-block" }))
                {
                    @Html.HiddenFor(m => m.Id)
                    @Html.HiddenFor(m => m.PersonId)
                    <div class="form-group">
                        @Html.LabelFor(m => m.LastName, "Last Name", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control input-sm", tabindex = 5 })
                        @Html.HiddenFor(m => m.PLastName)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.FirstName, "First Name", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control input-sm", tabindex = 5 })
                        @Html.HiddenFor(m => m.PFirstName)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.StartDate, "Start Date", new { @class = "control-label" })
                        <div class="input-group">
                            @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control input-sm date-picker", tabindex = 10, maxlength = 10 })
                            <span class="input-group-addon datepicker-trigger">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.EndDate, "End Date", new { @class = "control-label" })
                        <div class="input-group">
                            @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control input-sm date-picker", tabindex = 10, maxlength = 10 })
                            <span class="input-group-addon datepicker-trigger">
                                <i class="fa fa-calendar"></i>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.BarNumber, "Bar Number", new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.BarNumber, new { @class = "form-control input-sm", tabindex = 5 })
                        @Html.HiddenFor(m => m.PBarNumber)
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="row" id="divSearchResult">
    <div class="col-md-12 col-sm-12 center-block" style="padding: 0 20px 0 20px">
        <div class="widget row">
            <div class="widget-body col-xs-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-condensed table-hover table-padding table-striped" id="CountyCounselAddEdit">
                        <thead>
                            <tr>
                                <th style="width: 30px;"></th>
                                <th class=""></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section fixedfooter{
    <div class="boxfloat text-center">
        <button id="save" type="submit" class="btn btn-primary v-bottom default" tabindex="3">Save</button>
        <button id="btnCancel" type="button" class="btn  v-bottom default" tabindex="4">Cancel</button>
    </div>
}
@section scripts
{
    <script>
        var $model = JSON.parse('@Html.Raw(Json.Encode(Model))');
    </script>
    <script src="@Url.Content("~/Scripts/Application-Script/Administration/CountyCounselAddEdit.js?v=" + Guid.NewGuid())"></script>
}

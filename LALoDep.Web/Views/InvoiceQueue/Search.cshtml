@model LALoDep.Models.Inquiry.InvoiceQueueViewModel
@{
    ViewBag.Title = "Invoice Queue";
}

<div class="row">
    <div class="col-md-12 col-sm-12 center-block" style="padding: 0 20px 0 20px">
        <div class="widget row">
            <div class="widget-header bordered-bottom bordered-themeprimary col-xs-12">
                <span class="widget-caption">Invoice Queue Search Criteria</span>
                <div class="widget-buttons">
                    &nbsp;
                </div>
            </div>
            <div class="widget-body col-xs-12">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "InvoiceQueue-search-form", @class = "form-inline  center-block" }))
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.BranchId, "Branch", new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.BranchId, Model.BranchList, "All Branches", new { @class = "form-control input-sm", tabindex = 1, style = "width:98%" })
                    </div>
                }
                <p></p>
                <div id="search-validation-error" class="alert alert-danger hidden">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    At least one search parameter is required.
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row" id="divSearchResult">
    <div class="col-md-12 col-sm-12 center-block" style="padding: 0 20px 0 20px">
        <div class="widget row">
            <div class="widget-header bordered-bottom bordered-themeprimary col-xs-12">
                <span class="widget-caption">Search Results</span>
                <div class="widget-buttons">
                    &nbsp;
                </div>
            </div>
            <div class="widget-body col-xs-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-condensed table-hover table-padding table-striped" id="searchInvoiceQueue">
                        <thead>
                            <tr>
                                <th class="">Invoice Date</th>
                                <th class="">All</th>
                                <th class="">Status</th>
                                <th class="">Client</th>
                                <th class="">Petition #</th>
                                <th class="">Hearing</th>
                                <th class="">Division</th>
                                <th class="">Branch</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section fixedfooter{
    <div class="boxfloat text-center">
        <button id="search" type="submit" class="btn btn-primary v-bottom default" tabindex="11">Search</button>
        <button id="add" type="submit" class="btn btn-default v-bottom" tabindex="13">Add New Invoice</button>
        <button id="approve" type="submit" class="btn btn-default v-bottom" tabindex="13">Approve Selected Invoices</button>
        <button id="print" type="submit" class="btn btn-default v-bottom" tabindex="12">Print</button>
    </div>
}

@section scripts
{
    <script type="text/javascript">
        var $onViewLoad = '@Model.OnViewLoad';
        var $loadFromCache = '@TempData["InvoiceSaved"]' == '';
    </script>
    <script src="@Url.Content("~/Scripts/Application-Script/Inquiry/InvoiceQueue.js?v=" + Guid.NewGuid())"></script>
}
